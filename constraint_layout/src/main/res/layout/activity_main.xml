<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491" android:layout_marginTop="168dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtAge" android:maxDate="12/31/2009"
            android:minDate="01/01/1959"/>
    <TextView
            android:text="select your birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtinfo"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/cal" android:textIsSelectable="false"
            android:textStyle="bold" android:textColor="#FF5722" android:layout_marginEnd="248dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="248dp"
    />
    <TextView
            android:text="Your age is"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cal"
            app:layout_constraintTop_toBottomOf="@+id/cal" app:layout_constraintHorizontal_bias="0.006"/>
</android.support.constraint.ConstraintLayout>